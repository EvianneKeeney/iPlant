<div class="border-form-div">
  <h2>Sign up</h2>
    <%= devise_error_messages! %>
    <% flash.each do |key, value| %>
       <div class="flash <%= key %>"><%= value %></div>
  <% end %>
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, :autofocus => true, :placeholder => 'Email address', class: "form-control"  %>
      </div>

      <div class="form-group">
        <%= f.label :password, class: "control-label" %><br />
        <%= f.password_field :password, :placeholder => 'Password', class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, class: "control-label" %><br />
        <%= f.password_field :password_confirmation, :placeholder => 'Password confirmation', class: "form-control" %>
      </div>

       <div class="form-group">
        <%= f.submit "Sign up",:class=>'btn btn-primary' %>
      </div>
      <%= link_to "Back to Login", :back %>
  <% end %>
</div>

